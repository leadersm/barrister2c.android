<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/image_barrister_item_usericon"
        app:fadeDuration="300"
        app:roundAsCircle="true"
        app:actualImageScaleType="focusCrop"
        app:placeholderImage="@color/colorPrimary"
        app:placeholderImageScaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_barrister_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignTop="@+id/image_barrister_item_usericon"
            android:layout_toRightOf="@+id/image_barrister_item_usericon"
            android:text="name"
            android:textAppearance="?attr/textAppearanceListItem"/>

        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="10sp"
                android:id="@+id/tv_favorite_type" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="10sp"
                android:id="@+id/tv_favorite_date" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
