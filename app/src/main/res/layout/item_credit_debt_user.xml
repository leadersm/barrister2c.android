<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_credit_user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="类型:"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_credit_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:text="姓名"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_credit_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:text="个人电话"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_credit_user_id_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:text="身份证"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_credit_user_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:text="单位名称"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_credit_company_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:text="公司电话"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_credit_liscense_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:text="信用代码"
        android:textSize="13sp" />

</LinearLayout>