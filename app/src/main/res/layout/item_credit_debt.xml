<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">

    <!--* String type;//债类型-->
    <!--* float money;//债的金额-->
    <!--* String desc;//债务描述-->
    <!--* String updateTime;//更新时间-->
    <!--* String creditDebtTime;//债形成的时间-->
    <!--* String creditDebtStatus;//债的状态-->

    <LinearLayout
        android:id="@+id/layout_debt_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="债务人"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/debt_frame"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_debt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:text="姓名"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_debt_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:text="个人电话"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_debt_user_id_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:text="身份证"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_debt_user_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:text="单位名称"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_debt_company_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:text="公司电话"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_debt_liscense_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:text="信用代码"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_debt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:text="联系地址"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_credit_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="类型:"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:text="状态"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_credit_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="债状态"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_credit_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:text="金额"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_credit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:text="形成时间:2016-04-09 14:00-17:00"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_credit_addtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:text="更新时间:2016-04-09 14:00-17:00"
        android:textSize="13sp" />


</LinearLayout>