<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp">


    <!--* String type;//债类型-->
    <!--* float money;//债的金额-->
    <!--* String desc;//债务描述-->
    <!--* String updateTime;//更新时间-->
    <!--* String creditDebtTime;//债形成的时间-->
    <!--* String creditDebtStatus;//债的状态-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_credit_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="类型:"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="状态"
            android:layout_marginLeft="10dp"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_credit_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="债状态"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_credit_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:text="金额"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_credit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:text="形成时间:2016-04-09 14:00-17:00"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_credit_addtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:text="更新时间:2016-04-09 14:00-17:00"
        android:textSize="13sp" />

</LinearLayout>